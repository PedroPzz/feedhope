@model FeedHope.Models.EmpresaModel

@{
    ViewData["Title"] = "Excluir Empresa";
}

<h2>@ViewData["Title"]</h2>

<p>Tem certeza que deseja excluir a empresa abaixo?</p>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>

    <dt class="col-sm-2">Endereço</dt>
    <dd class="col-sm-10">@Model.Endereco</dd>

    <dt class="col-sm-2">Contato</dt>
    <dd class="col-sm-10">@Model.Contato</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
