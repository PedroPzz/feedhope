@model IEnumerable<FeedHope.Models.EmpresaModel>

@{
    ViewData["Title"] = "Empresas";
}

<h2 class="mb-4">Empresas</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Nova Empresa</a>

<table class="table table-hover table-striped border">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Endereço</th>
            <th>Contato</th>
            <th style="width: 220px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var empresa in Model)
            {
                <tr>
                    <td>@empresa.Nome</td>
                    <td>@empresa.Tipo</td>
                    <td>@empresa.Endereco</td>
                    <td>@empresa.Contato</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Ações">
                            <a asp-action="Details" asp-route-id="@empresa.Id" class="btn btn-info btn-sm" title="Ver detalhes">
                                <i class="fas fa-eye"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@empresa.Id" class="btn btn-primary btn-sm" title="Editar empresa">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@empresa.Id" class="btn btn-danger btn-sm" title="Excluir empresa">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Nenhuma empresa cadastrada.</td>
            </tr>
        }
    </tbody>
</table>
