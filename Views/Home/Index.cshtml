@{
    ViewData["Title"] = "FeedHope - Plataforma de Reaproveitamento de Alimentos";
}

<!-- Hero Section Otimizada -->
<section class="hero-section" role="banner">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-10 mx-auto text-center">
                <h1 class="hero-title fade-in-up" id="main-title">
                    <img src="/images/leaf-icon.png" alt="Ícone de folha representando sustentabilidade" class="sustainable-icon leaf-float" style="width: 64px; height: 64px; margin-right: 1rem;">
                    FeedHope
                </h1>
                <p class="hero-subtitle fade-in-up" role="doc-subtitle">
                    Conectando empresas com a UFRA para reaproveitamento de alimentos
                </p>
                <p class="lead fade-in-up" style="font-size: 1.1rem; margin-bottom: 2.5rem;">
                    Plataforma que facilita a doação de alimentos excedentes para projetos sustentáveis da Universidade Federal Rural da Amazônia.
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap fade-in-up" role="group" aria-label="Ações principais">
                    <a class="btn btn-primary btn-lg pulse-on-hover" asp-controller="Empresa" asp-action="Create" 
                       aria-label="Cadastrar sua empresa na plataforma FeedHope">
                        <i class="fas fa-plus me-2" aria-hidden="true"></i>
                        Cadastrar Empresa
                    </a>
                    <a class="btn btn-outline-primary btn-lg" asp-controller="Alimento" asp-action="Index"
                       aria-label="Ver lista de alimentos disponíveis para doação">
                        <i class="fas fa-list me-2" aria-hidden="true"></i>
                        Ver Alimentos
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Seção Como Funciona - Simplificada -->
<section class="py-5" role="main" aria-labelledby="como-funciona-title">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 id="como-funciona-title" class="display-5 fw-bold mb-3" style="color: var(--dark-green);">
                    Como Funciona
