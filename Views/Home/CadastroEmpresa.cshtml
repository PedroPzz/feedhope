@{
    ViewData["Title"] = "Cadastro de Empresa - FeedHope";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                
                <!-- Header -->
                <div class="text-center mb-5">
                    <div class="d-inline-flex align-items-center justify-content-center bg-success rounded-circle mb-3" 
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-building text-white" style="font-size: 2rem;"></i>
                    </div>
                    <h1 class="h2 text-dark mb-2">Cadastro de Empresa</h1>
                    <p class="text-muted">Junte-se à nossa rede de empresas sustentáveis</p>
                </div>

                <!-- Formulário -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-clipboard-list me-2"></i>
                            Informações da Empresa
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        
                        <!-- Alertas -->
                        <div id="alert-container"></div>
                        
                        <form id="cadastroEmpresaForm" novalidate>
                            
                            <!-- Dados Básicos -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-success border-bottom pb-2 mb-3">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Dados Básicos
                                    </h5>
                                </div>
                                
                                <div class="col-md-8 mb-3">
                                    <label for="nomeEmpresa" class="form-label">
                                        <i class="fas fa-building me-1"></i>
                                        Nome da Empresa *
                                    </label>
                                    <input type="text" class="form-control" id="nomeEmpresa" name="nomeEmpresa" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe o nome da empresa.
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="cnpj" class="form-label">
                                        <i class="fas fa-id-card me-1"></i>
                                        CNPJ *
                                    </label>
                                    <input type="text" class="form-control" id="cnpj" name="cnpj" 
                                           placeholder="00.000.000/0000-00" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe um CNPJ válido.
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="tipoEmpresa" class="form-label">
                                        <i class="fas fa-tags me-1"></i>
                                        Tipo de Empresa *
                                    </label>
                                    <select class="form-select" id="tipoEmpresa" name="tipoEmpresa" required>
                                        <option value="">Selecione o tipo</option>
                                        <option value="supermercado">Supermercado</option>
                                        <option value="atacadista">Atacadista</option>
                                        <option value="restaurante">Restaurante</option>
                                        <option value="padaria">Padaria</option>
                                        <option value="hortifruti">Hortifruti</option>
                                        <option value="industria">Indústria Alimentícia</option>
                                        <option value="outro">Outro</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor, selecione o tipo de empresa.
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="porte" class="form-label">
                                        <i class="fas fa-chart-bar me-1"></i>
                                        Porte da Empresa *
                                    </label>
                                    <select class="form-select" id="porte" name="porte" required>
                                        <option value="">Selecione o porte</option>
                                        <option value="micro">Microempresa</option>
                                        <option value="pequena">Pequena Empresa</option>
                                        <option value="media">Média Empresa</option>
                                        <option value="grande">Grande Empresa</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor, selecione o porte da empresa.
                                    </div>
                                </div>
                            </div>

                            <!-- Endereço -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-success border-bottom pb-2 mb-3">
                                        <i class="fas fa-map-marker-alt me-2"></i>
                                        Endereço
                                    </h5>
                                </div>
                                
                                <div class="col-md-3 mb-3">
                                    <label for="cep" class="form-label">
                                        <i class="fas fa-mail-bulk me-1"></i>
                                        CEP *
                                    </label>
                                    <input type="text" class="form-control" id="cep" name="cep" 
                                           placeholder="00000-000" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe um CEP válido.
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="endereco" class="form-label">
                                        <i class="fas fa-road me-1"></i>
                                        Endereço *
                                    </label>
                                    <input type="text" class="form-control" id="endereco" name="endereco" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe o endereço.
                                    </div>
                                </div>
                                
                                <div class="col-md-3 mb-3">
                                    <label for="numero" class="form-label">
                                        <i class="fas fa-hashtag me-1"></i>
                                        Número *
                                    </label>
                                    <input type="text" class="form-control" id="numero" name="numero" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe o número.
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="complemento" class="form-label">
                                        <i class="fas fa-plus me-1"></i>
                                        Complemento
                                    </label>
                                    <input type="text" class="form-control" id="complemento" name="complemento">
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="bairro" class="form-label">
                                        <i class="fas fa-map me-1"></i>
                                        Bairro *
                                    </label>
                                    <input type="text" class="form-control" id="bairro" name="bairro" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe o bairro.
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="cidade" class="form-label">
                                        <i class="fas fa-city me-1"></i>
                                        Cidade *
                                    </label>
                                    <input type="text" class="form-control" id="cidade" name="cidade" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe a cidade.
                                    </div>
                                </div>
                                
                                <div class="col-md-2 mb-3">
                                    <label for="estado" class="form-label">
                                        <i class="fas fa-flag me-1"></i>
                                        Estado *
                                    </label>
                                    <select class="form-select" id="estado" name="estado" required>
                                        <option value="">UF</option>
                                        <option value="AC">AC</option>
                                        <option value="AL">AL</option>
                                        <option value="AP">AP</option>
                                        <option value="AM">AM</option>
                                        <option value="BA">BA</option>
                                        <option value="CE">CE</option>
                                        <option value="DF">DF</option>
                                        <option value="ES">ES</option>
                                        <option value="GO">GO</option>
                                        <option value="MA">MA</option>
                                        <option value="MT">MT</option>
                                        <option value="MS">MS</option>
                                        <option value="MG">MG</option>
                                        <option value="PA" selected>PA</option>
                                        <option value="PB">PB</option>
                                        <option value="PR">PR</option>
                                        <option value="PE">PE</option>
                                        <option value="PI">PI</option>
                                        <option value="RJ">RJ</option>
                                        <option value="RN">RN</option>
                                        <option value="RS">RS</option>
                                        <option value="RO">RO</option>
                                        <option value="RR">RR</option>
                                        <option value="SC">SC</option>
                                        <option value="SP">SP</option>
                                        <option value="SE">SE</option>
                                        <option value="TO">TO</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Selecione o estado.
                                    </div>
                                </div>
                            </div>

                            <!-- Contato -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-success border-bottom pb-2 mb-3">
                                        <i class="fas fa-phone me-2"></i>
                                        Contato
                                    </h5>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="nomeResponsavel" class="form-label">
                                        <i class="fas fa-user me-1"></i>
                                        Nome do Responsável *
                                    </label>
                                    <input type="text" class="form-control" id="nomeResponsavel" name="nomeResponsavel" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe o nome do responsável.
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="cargoResponsavel" class="form-label">
                                        <i class="fas fa-briefcase me-1"></i>
                                        Cargo *
                                    </label>
                                    <input type="text" class="form-control" id="cargoResponsavel" name="cargoResponsavel" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe o cargo do responsável.
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="telefone" class="form-label">
                                        <i class="fas fa-phone me-1"></i>
                                        Telefone *
                                    </label>
                                    <input type="tel" class="form-control" id="telefone" name="telefone" 
                                           placeholder="(00) 0000-0000" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe um telefone válido.
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="celular" class="form-label">
                                        <i class="fas fa-mobile-alt me-1"></i>
                                        Celular
                                    </label>
                                    <input type="tel" class="form-control" id="celular" name="celular" 
                                           placeholder="(00) 00000-0000">
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label for="email" class="form-label">
                                        <i class="fas fa-envelope me-1"></i>
                                        E-mail *
                                    </label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                    <div class="invalid-feedback">
                                        Por favor, informe um e-mail válido.
                                    </div>
                                </div>
                            </div>

                            <!-- Informações Adicionais -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-success border-bottom pb-2 mb-3">
                                        <i class="fas fa-leaf me-2"></i>
                                        Informações sobre Doações
                                    </h5>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="tiposAlimentos" class="form-label">
                                        <i class="fas fa-apple-alt me-1"></i>
                                        Tipos de Alimentos Disponíveis *
                                    </label>
                                    <div class="form-check-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="frutas" id="frutas" name="tiposAlimentos">
                                            <label class="form-check-label" for="frutas">
                                                <i class="fas fa-apple-alt text-success me-1"></i> Frutas
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="verduras" id="verduras" name="tiposAlimentos">
                                            <label class="form-check-label" for="verduras">
                                                <i class="fas fa-carrot text-warning me-1"></i> Verduras e Legumes
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="paes" id="paes" name="tiposAlimentos">
                                            <label class="form-check-label" for="paes">
                                                <i class="fas fa-bread-slice text-warning me-1"></i> Pães e Padaria
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="laticinios" id="laticinios" name="tiposAlimentos">
                                            <label class="form-check-label" for="laticinios">
                                                <i class="fas fa-cheese text-warning me-1"></i> Laticínios
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="carnes" id="carnes" name="tiposAlimentos">
                                            <label class="form-check-label" for="carnes">
                                                <i class="fas fa-drumstick-bite text-danger me-1"></i> Carnes
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="outros" id="outros" name="tiposAlimentos">
                                            <label class="form-check-label" for="outros">
                                                <i class="fas fa-ellipsis-h text-secondary me-1"></i> Outros
                                            </label>
                                        </div>
                                    </div>
                                    <div class="invalid-feedback">
                                        Por favor, selecione pelo menos um tipo de alimento.
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="volumeMedio" class="form-label">
                                        <i class="fas fa-weight me-1"></i>
                                        Volume Médio Mensal (kg) *
                                    </label>
                                    <select class="form-select" id="volumeMedio" name="volumeMedio" required>
                                        <option value="">Selecione o volume</option>
                                        <option value="0-50">0 - 50 kg</option>
                                        <option value="51-100">51 - 100 kg</option>
                                        <option value="101-500">101 - 500 kg</option>
                                        <option value="501-1000">501 - 1000 kg</option>
                                        <option value="1000+">Mais de 1000 kg</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor, selecione o volume médio.
                                    </div>
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label for="observacoes" class="form-label">
                                        <i class="fas fa-comment me-1"></i>
                                        Observações Adicionais
                                    </label>
                                    <textarea class="form-control" id="observacoes" name="observacoes" rows="3" 
                                              placeholder="Informações adicionais sobre horários de coleta, condições especiais, etc."></textarea>
                                </div>
                            </div>

                            <!-- Termos -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="aceitaTermos" name="aceitaTermos" required>
                                        <label class="form-check-label" for="aceitaTermos">
                                            Aceito os <a href="#" class="text-success">termos de uso</a> e 
                                            <a href="#" class="text-success">política de privacidade</a> *
                                        </label>
                                        <div class="invalid-feedback">
                                            Você deve aceitar os termos para continuar.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Botões -->
                            <div class="row">
                                <div class="col-12 text-center">
                                    <button type="button" class="btn btn-outline-secondary btn-lg me-3" onclick="history.back()">
                                        <i class="fas fa-arrow-left me-2"></i>
                                        Voltar
                                    </button>
                                    <button type="submit" class="btn btn-success btn-lg" id="btnCadastrar">
                                        <i class="fas fa-save me-2"></i>
                                        Cadastrar Empresa
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Sucesso -->
<div class="modal fade" id="modalSucesso" tabindex="-1" aria-labelledby="modalSucessoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalSucessoLabel">
                    <i class="fas fa-check-circle me-2"></i>
                    Cadastro Realizado com Sucesso!
                </h5>
            </div>
            <div class="modal-body text-center">
                <div class="mb-3">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                </div>
                <h4>Bem-vindo ao FeedHope!</h4>
                <p class="mb-0">Sua empresa foi cadastrada com sucesso. Em breve entraremos em contato para finalizar o processo.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-success" onclick="window.location.href='@Url.Action("Index", "Home")'">
                    <i class="fas fa-home me-2"></i>
                    Ir para Início
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cadastro-empresa.js"></script>
}

