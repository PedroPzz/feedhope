@model FeedHope.Models.DestinacaoModel
@{
    ViewData["Title"] = "Editar Destinação";
}

<h2>Editar Destinação</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label"></label>
        <input asp-for="Quantidade" type="number" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Data" class="form-label"></label>
        <input asp-for="Data" type="date" class="form-control" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ColetaId" class="form-label">Coleta</label>
        <select asp-for="ColetaId" asp-items="ViewBag.Coletas" class="form-select"></select>
        <span asp-validation-for="ColetaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
