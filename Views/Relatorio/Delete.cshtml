@model FeedHope.Models.RelatorioModel

@{
    ViewData["Title"] = "Excluir Relatório";
}

<h2>Excluir Relatório</h2>

<h3>Tem certeza que deseja excluir este relatório?</h3>

<div>
    <h4>@Model.Titulo</h4>
    <p><strong>Data de Geração:</strong> @Model.DataGeracao.ToShortDateString()</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
