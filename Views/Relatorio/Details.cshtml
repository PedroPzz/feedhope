@model FeedHope.Models.RelatorioModel

@{
    ViewData["Title"] = "Detalhes do Relatório";
}

<h2>Detalhes do Relatório</h2>

<div>
    <h4>@Model.Titulo</h4>
    <p><strong>Data de Geração:</strong> @Model.DataGeracao.ToShortDateString()</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
