@model IEnumerable<FeedHope.Models.AlimentoModel>

@{
    ViewData["Title"] = "Alimentos";
}

<h2>Alimentos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Novo Alimento</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Quantidade</th>
            <th>Validade</th>
            <th>Empresa</th>
            <th style="width: 180px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tipo</td>
                <td>@item.Quantidade</td>
                <td>@item.Validade.ToShortDateString()</td>
                <td>@item.Empresa?.Nome</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Ações">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Ver detalhes">
                            <i class="fas fa-eye"></i> Detalhes
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Editar alimento">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Excluir alimento">
                            <i class="fas fa-trash"></i> Excluir
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


