@model FeedHope.Models.AlimentoModel

@{
    ViewData["Title"] = "Excluir Alimento";
}

<h2>Excluir Alimento</h2>

<h4>Tem certeza que deseja excluir este alimento?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>

        <dt class="col-sm-2">Quantidade</dt>
        <dd class="col-sm-10">@Model.Quantidade</dd>

        <dt class="col-sm-2">Validade</dt>
        <dd class="col-sm-10">@Model.Validade.ToShortDateString()</dd>

        <dt class="col-sm-2">Empresa</dt>
        <dd class="col-sm-10">@Model.Empresa?.Nome</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
