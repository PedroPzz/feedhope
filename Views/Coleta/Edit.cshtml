@model FeedHope.Models.ColetaModel

@{
    ViewData["Title"] = "Editar Coleta";
}

<h2 class="mb-4">Editar Coleta</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DataSolicitacao" />
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="DataAprovacao" />
    <input type="hidden" asp-for="ResponsavelUFRA" />
    <input type="hidden" asp-for="DataInicioColeta" />
    <input type="hidden" asp-for="DataConclusao" />
    <input type="hidden" asp-for="MotivoRecusa" />
    <input type="hidden" asp-for="QuantidadeTotalColetada" />
    <input type="hidden" asp-for="OrdemColeta" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="DataColeta" class="form-label">Data da Coleta</label>
                <input asp-for="DataColeta" type="date" class="form-control" required />
                <span asp-validation-for="DataColeta" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="EmpresaId" class="form-label">Empresa</label>
                <select asp-for="EmpresaId" asp-items="ViewBag.Empresas" class="form-select" required>
                    <option value="">Selecione uma empresa</option>
                </select>
                <span asp-validation-for="EmpresaId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="Endereco" class="form-label">Endereço de Coleta</label>
                <input asp-for="Endereco" type="text" class="form-control" required />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="Prioridade" class="form-label">Prioridade</label>
                <select asp-for="Prioridade" asp-items="ViewBag.PrioridadeList" class="form-select">
                    <option value="">Selecione a prioridade</option>
                </select>
                <span asp-validation-for="Prioridade" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Latitude" class="form-label">Latitude (opcional)</label>
                <input asp-for="Latitude" type="number" step="any" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Longitude" class="form-label">Longitude (opcional)</label>
                <input asp-for="Longitude" type="number" step="any" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Observacoes" class="form-label">Observações</label>
        <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações adicionais sobre a coleta"></textarea>
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>
            Salvar Alterações
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times me-2"></i>
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
